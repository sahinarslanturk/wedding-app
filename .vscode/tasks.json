{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Install Dependencies",
      "type": "shell",
      "command": "npm",
      "args": ["install"],
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Frontend (localhost:5173)",
      "type": "shell",
      "command": "cd frontend && npm run dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*VITE.*ready in.*",
          "endsPattern": "^.*"
        }
      }
    },
    {
      "label": "Start Backend (localhost:5000)",
      "type": "shell",
      "command": "cd backend && npm run dev",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^.*$",
          "file": 1,
          "location": 2,
          "message": 3
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^.*Backend sunucusu.*",
          "endsPattern": "^.*"
        }
      }
    },
    {
      "label": "Build Frontend for Production",
      "type": "shell",
      "command": "cd frontend && npm run build",
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    }
  ]
}

