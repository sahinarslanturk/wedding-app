{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome - Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend",
      "sourceMaps": true,
      "preLaunchTask": "Start Frontend"
    },
    {
      "name": "Attach to Backend (Node)",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true
    }
  ],
  "compounds": [
    {
      "name": "Full Stack Debug",
      "configurations": ["Launch Chrome - Frontend", "Attach to Backend (Node)"]
    }
  ]
}
